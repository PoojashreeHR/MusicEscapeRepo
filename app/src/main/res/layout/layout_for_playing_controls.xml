<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingBottom="5dp"
    >

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:src="@mipmap/play_not_found"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_play_pause"
        android:layout_centerVertical="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_play_pause"
        android:layout_toRightOf="@id/btn_play_pause"
        android:layout_below="@id/seek_bar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_songname"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_songname"
            android:text="Track Info"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_song_detail"
            />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/loop_not_select"
        android:background="@null"
        android:layout_below="@id/seek_bar"
        android:layout_marginRight="5dp"
        />
</RelativeLayout>