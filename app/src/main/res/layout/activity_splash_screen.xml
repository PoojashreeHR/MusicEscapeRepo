<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:weightSum="10"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SplashScreen"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/rl_header"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/toolbar_setting"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/privacyInfo"
                android:layout_gravity="center"
                android:text="PRIVACY STATEMENT"
                android:textColor="#9D9D9D"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
    </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <View
        android:id="@+id/feedback_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rl_header"
        android:alpha="0.9"
        android:background="#262626"
        />
    <RelativeLayout
        android:layout_below="@+id/feedback_view"
        android:layout_marginTop="45dp"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:id="@+id/rl_statement"
        android:layout_width="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/splashScreen"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#9D9D9D"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_statement"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rl_privacy"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="View Full Privacy Statement"
            android:textSize="20dp"
            android:background="#161616"
            android:gravity="center"
            android:textColor="@color/exited"
            android:id="@+id/itemTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_privacy"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rl_getStarted"
        android:layout_width="match_parent">
    <Button
        android:id="@+id/getStarted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/startedbutton_background"
        android:layout_below="@+id/tv_completion"
        android:text="get started"
        android:textColor="#9D9D9D"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>

    </LinearLayout>
