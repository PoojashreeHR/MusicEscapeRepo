<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#262626"
    tools:context="com.agiliztech.musicescape.activity.DashboardActivity">


    <com.agiliztech.musicescape.view.PieChart

    android:id="@+id/Pie"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    android:layout_weight="100"
    custom:labelHeight="20dp"
    custom:labelWidth="110dp"
    custom:labelY="85dp"
    custom:labelPosition="left"
    custom:highlightStrength="1.12"
    android:background="#262626"
    custom:pieRotation="0"
    custom:labelColor="@android:color/black"
    custom:autoCenterPointerInSlice="true"
    custom:pointerRadius="4dp"
    />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_draw"
                android:layout_width="110dp"
                android:layout_height="155dp"
                android:visibility="visible"
                android:layout_marginLeft="44dp"
                android:src="@drawable/m_draw_inactive" />
            <ImageView
                android:id="@+id/menu_activedraw"
                android:layout_width="110dp"
                android:layout_height="155dp"
                android:visibility="gone"
                android:layout_marginLeft="44dp"
                android:src="@drawable/m_draw_active" />

            <ImageView
                android:id="@+id/menu_history"
                android:layout_width="153dp"
                android:layout_height="130dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="73dp"
                android:src="@drawable/m_history_inactive" />

            <ImageView
                android:id="@+id/menu_library"
                android:layout_width="154dp"
                android:layout_height="130dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="201dp"
                android:visibility="visible"
                android:src="@drawable/m_library_inactive" />

            <ImageView
                android:id="@+id/menu_activelibrary"
                android:layout_width="154dp"
                android:layout_height="130dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="201dp"
                android:visibility="gone"
                android:src="@drawable/m_library_active" />

            <ImageView
                android:id="@+id/menu_settings"
                android:layout_width="110dp"
                android:layout_height="155dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="248dp"
                android:visibility="visible"
                android:src="@drawable/m_settings_inactive" />

            <ImageView
                android:id="@+id/menu_activeSettings"
                android:layout_width="110dp"
                android:layout_height="155dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="248dp"
                android:visibility="gone"
                android:src="@drawable/m_settings_active" />


        </FrameLayout>

    </RelativeLayout>


</FrameLayout>
