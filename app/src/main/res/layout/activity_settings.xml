<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="15dp"
    tools:context="com.agiliztech.musicescape.activity.SettingsActivity">


    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:id="@+id/toolbar"
        android:orientation="horizontal">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/view">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SETTINGS"
            android:textColor="#6E6E6E"
            android:id="@+id/settings"
            android:gravity="center"
            android:layout_alignBottom="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="@drawable/menuiconmanager"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <View
        android:id="@+id/feedback_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="5dp"
        android:alpha="0.9"
        android:background="#262626"
        />

    <RelativeLayout
        android:layout_below="@+id/rl_limitjourney"
        android:layout_marginTop="25dp"
        android:background="#161616"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LIMIT JOURNEY"
            android:textColor="#FDBE46"
            android:id="@+id/tv_limitjourney"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:checked="false"
            android:theme="@style/SCBSwitch"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:id="@+id/rl_limit"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_limit"
            android:textColor="#404040"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 MINS"
            android:layout_marginLeft="17dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/second_limit"
            android:textColor="#404040"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30 MINS"
            android:layout_toRightOf="@+id/first_limit"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_limit"
            android:textColor="#404040"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="45 MINS"
            android:layout_toRightOf="@+id/second_limit"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourth_limit"
            android:textColor="#404040"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="60 MINS"
            android:layout_toRightOf="@+id/third_limit"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            />

    </RelativeLayout>


</LinearLayout>
