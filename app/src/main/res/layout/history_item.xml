<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="162dp"
    android:layout_height="270dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="162dp"
        android:layout_height="270dp"
        android:scaleType="centerCrop"

        >

        <View
            android:id="@+id/bottom_view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom|start"
            android:alpha="0.9"
            android:background="#262626" />
        <View
        android:id="@+id/right_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:alpha="0.9"
            android:visibility="visible"
        android:layout_gravity="center|end"
        android:background="#262626"
        />

        <com.agiliztech.musicescape.journey.JourneyView
            android:id="@+id/journey"
            android:layout_width="126dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <!--1nd layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:id="@+id/ll_date"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_above="@+id/ll_mood"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="7dp">


                <RelativeLayout
                    android:id="@+id/rl_max_torque"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_max_torque_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:gravity="left"
                        android:text="0%"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="2">


                <RelativeLayout
                    android:id="@+id/rl_idle_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_playlistCreated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="13dp"
                        android:text="25 Sep"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="12sp"

                        />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
        <!--2nd layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"

            android:id="@+id/ll_mood"
            android:layout_below="@+id/ll_date"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="bottom"
                android:weightSum="6"
                >

<!--moods-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingLeft="7dp"
                    >

                    <!--current moods-->
                    <RelativeLayout
                        android:id="@+id/rl_currentmood"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_currentmood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Exited"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff"
                            android:textSize="12sp"

                            />
                    </RelativeLayout>
                    <!--target_moods-->
                    <RelativeLayout
                        android:id="@+id/rl_targetmood"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_targetmood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Bored"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff"
                            android:textSize="12sp"

                            />
                    </RelativeLayout>

                </LinearLayout>
<!--<save_history-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:paddingRight="5dp"
                    android:layout_weight="2">


                    <RelativeLayout
                        android:id="@+id/rl_fav"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fav"
                            android:background="@drawable/savehistory"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                             />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <!--</LinearLayout>-->
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Msayan"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--/>-->

    </FrameLayout>
</LinearLayout>